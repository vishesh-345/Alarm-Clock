<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishesh.awakken.Activity2"
    android:background="#e6ede9">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="39dp"
        android:background="#722f13"
        android:text="Enter Motivation"
        android:textAlignment="center"
        android:textAppearance="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/MotiveText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#622117"
        android:text="Vibrate"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/MotiveText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#72211f"
        android:text="Snooze (minutes)"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textAppearance="@style/Widget.AppCompat.Button.Borderless" />
    <EditText
        android:id="@+id/snoozeText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="0.09"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView4" />



    <Button
        android:id="@+id/set"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="SET"
        android:textSize="32dp"
        android:background="?attr/colorPrimary"
        android:layout_marginBottom="115dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:background="@color/colorPrimary"
        android:textSize="32dp"
        android:text="CANCEL"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/set" />

</RelativeLayout>
